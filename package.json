{
    "name": "game-of-three-challenge",
    "author": "Maryam Ghafarinia",
    "version": "1.0.0",
    "description": "Client Server Game of Three implementation with Express and Socket.IO",
    "main": "app.js",
    "scripts": {
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "build": "rimraf dist/ && npx tsc && copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.js dist/ ",
        "start": "node dist/app.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts"
    },
    "keywords": [
        "Express",
        "Socket.IO",
        "Typescipt",
        "Node.JS"
    ],
    "license": "ISC",
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.14",
        "@types/node": "^18.11.3",
        "copyfiles": "^2.4.1",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^4.8.4"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "socket.io": "^4.5.3",
        "winston": "^3.8.2"
    }
}
